# Admin credentials - CHANGE THESE IN PRODUCTION!
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_password_here

# Flask configuration
# Generate a secure random key: python -c \"import secrets; print(secrets.token_hex(32))\"
SECRET_KEY=generate-a-secure-random-key-here
FLASK_ENV=production  # or development for local development
FLASK_APP=app.py

# Database configuration
# For SQLite (default):
DATABASE_URL=sqlite:///school.db
# For PostgreSQL example:
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Upload configuration
MAX_CONTENT_LENGTH=15728640  # 15MB in bytes
UPLOAD_FOLDER=uploads

# Session configuration
SESSION_COOKIE_SECURE=True  # Set to False in development
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds

# Additional settings you might need:
# DEBUG=False  # Set to True in development
# TESTING=False  # Set to True when running tests
# SERVER_NAME=your-domain.com  # Set in production
# PREFERRED_URL_SCHEME=https  # Set in production
